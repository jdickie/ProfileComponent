<%= semantic_form_for @user do |f| %>
	<%= f.input :username %>
	<%= f.input :password %>
	<%= f.input :email %>
	
	<% for role in User::ROLES %>
		<% 
			checked = false 
			if (@user.roles.include?(role.downcase())):
				checked = true
			end
		%>
	  <%= check_box_tag "user[roles][#{role}]", role, @user.is?(role), 
		{:name => "user[roles][]"}  %>
	  <%= label_tag "user_roles_#{role}", role.humanize %>
		<br />
	<% end %>
	<%= hidden_field_tag "user[roles][]", "" %>
	
	<%= f.action :submit, :as => :button %>
<% 
	# end of user form
	end 
%>
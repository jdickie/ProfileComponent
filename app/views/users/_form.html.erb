<%= semantic_form_for @user do |f| %>
	<%= f.input :username %>
	<%= f.input :password %>
	<%= f.input :email %>
	
	<% if can :assign_roles, User %>
		<%= f.inputs :for => :roles do |r| %>
		  <%= r.input :roles, :as => :check_boxes, :collection => Role.order("id ASC").all %>
		<% end %>
	<% end %>
	
	<%= f.action :submit, :as => :button %>
<% 
	# end of user form
	end 
%>
<%= form_for @user do |f| %>
	<%= f.label :username, "Username" %>
	<%= f.text_field(:username) %>
	<%= f.label :password, "Password" %>
	<%= f.text_field :password %>
	<%= f.label :email, "Email" %>
	<%= f.text_field :email %>
	<br/>
	<% if can? :assign_roles, User %>
		<% @roles.each do |r| %>
			<% 
				checked = false
				if (@user.roles.include?(r))
					checked = true
				end
			%>
			<%= f.label :roles, r.name %>
		  <%= check_box_tag("roles", r.name, checked) %>
			<br/>
		<% end %>
	<% end %>
	
	<%= f.submit %>
<% 
	# end of user form
	end 
%>
<% 
# List of existing users
%>
<table id="user_table">
	<thead>
		<tr>
			<th>Username</th>
			<th>Role(s)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |t| %>
		<tr>	
			<td>
				<%= t.username %>
			</td>
			<td>
				<%= t.roles.join ' ' %>
			</td>
			<% if @user.is? :admin %>
			<td>
				<%= link_to "Edit", :controller => 'users', :action => 'edit', :id => t.id %>
				<br/>
				<%= link_to "Delete", :controller => 'users', :action => 'destroy', :id => t.id %>
			</td>
			<% end %>
		</tr>
	<% end %>
	</tbody>
</table>